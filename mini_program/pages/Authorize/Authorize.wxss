    align-items: center;
    justify-content: space-around;
    min-height: 100vh;
    color: #000000;
    background-color: #ffffff;
}

.salutatory{
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 150rpx;
    width: 70vw;
    background-color: #ffffff;
}

