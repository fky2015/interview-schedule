/* pages/Notice/Notice.wxss */
.back{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    min-height: 100vh;
    background-color: #ffffff;
}

.notice{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.image{
    width: 100vw;
    height: 650rpx;
}

.title{
    display: flex;
    flex-wrap: wrap;
    width: 100vw;
    height: 250rpx;
    position: relative;
    bottom: 250rpx;
    background-color: rgba(255, 255, 255, 1);
}

.category{
    width: 98vw;
    margin-top: 20rpx;
    margin-left: 30rpx;
    font-size: 38rpx;
    font-weight: 500;
    color: #666666;
}

.text{
    width: 98vw;
    margin-top: 10rpx;
    margin-left: 30rpx;
    font-size: 60rpx;
    font-weight: 600;
}

.artical{
    width: 90vw;
    color: #333333;
    font-size: 40rpx;
    line-height: 65rpx;
    border-bottom: 1px #bbbbbb solid;
}

.blank{
    width: 100vw;
    height: 100rpx;
}