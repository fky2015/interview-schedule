.back{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    min-height: 100vh;
    color: #000000;
    background-color: #ffffff;
}

.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 30vw;
  height: 250rpx;
  background-color: #ffffff;
}

.userInfoAvatar {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx;
  border-radius: 50%;
  border: 2px solid #aaaaaa;
}

.userInfoName {
  color: #000000;
  background-color: #ffffff;
  margin-bottom: 70rpx;
  margin-left: 20rpx;
  font-size: 50rpx;
}