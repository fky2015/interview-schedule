/* pages/User/User.wxss */

.back{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  color: #000000;
  background-color: #ffffff;
}

.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 250rpx;
  width: 100vw;
  background-color: #ffffff;
}

.userInfoAvatar {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx;
  border-radius: 50%;
  border: 2px solid #aaaaaa;
}

.userInfoName {
  width: 50vw;
  color: #000000;
  background-color: #ffffff;
  margin-bottom: 70rpx;
  margin-left: 20rpx;
  word-break: keep-all;
  word-wrap: break-word;
  font-size: 50rpx;
}